<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.entrophy">

    <uses-sdk tools:overrideLibrary="com.bigbangbutton.editcodeview" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/location_green"
        android:label="@string/app_name"
        android:noHistory="true"
        android:roundIcon="@drawable/location_green"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="stateHidden">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WelcomePage" />
        <activity android:name=".EnterPhoneNumber" />
        <activity android:name=".OTPVerification" />
        <activity android:name=".OtpVerificationSuccess" />
        <activity android:name=".LetsConnect" />
        <activity android:name=".Contacts" />
        <activity android:name=".ConnectionSet" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".MyProfile" />
        <activity android:name=".GroupByLocationDetail" />
        <activity android:name=".Notifications" />
        <activity android:name=".TabbedContacts">
            <intent-filter>
                <action android:name="com.entrophy.TabbedContacts" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".WorkExperience" />

        <service android:name=".helper.FireBaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".helper.FCMInstancdIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <receiver android:name=".helper.InsertLocationServer" />
        <receiver android:name=".helper.GPSStatusToServer" />

        <activity android:name=".TermsConditions" />
        <activity android:name=".FaqActivity" />
        <activity android:name=".InviteOthers"></activity>
    </application>

</manifest>