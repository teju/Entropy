<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.entrophy.MyProfile">
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/header"
                android:background="@color/background_gray">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"
                    android:id="@+id/title_val"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="Profile"
                    android:textColor="@color/black"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/chevron_left"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"
                    android:id="@+id/back_button"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDIT"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/edit"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_height="0.5dp"
                    android:background="@color/dark_gray"></View>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:background="@color/background_gray"
                android:layout_height="200dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:visibility="visible"
                    android:orientation="vertical"
                    android:id="@+id/friends_profile_header"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:text="Prathap D K"
                                android:textColor="@color/dark_gray"
                                android:textStyle="bold"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="+91-1234567890"
                                android:textColor="@color/dark_gray"
                                android:textStyle="bold"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/right_view"
                            android:layout_marginRight="20dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/phone"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/message_processing"/>

                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="20dp"
                        android:background="#efefef"></View>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Prathap D K is in JP Nagar area (Work Location). Approximately 10 minutes from you."
                        android:layout_below="@+id/right_view"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:text="NAME"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Prathap D K"
                        android:textColor="@color/dark_gray"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:text="CONTACT"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="+91-1234567890"
                        android:textColor="@color/dark_gray"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:text="BIO"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Professional Photographer and Blogger Working from StarBucks!"
                        android:textColor="@color/dark_gray"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:text="HOME"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="JP Nagar, Bangalore, India."
                        android:textColor="@color/dark_gray"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:id="@+id/work"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:text="WORK"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Professional Photographer and Blogger,2014-present"
                        android:textColor="@color/dark_gray"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:text=""
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Project Manager, Sasken, 2006-2014"
                        android:textColor="@color/dark_gray"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:text=""
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Consultant, Motorola Mobility, Chicago, US, 2012-2014"
                        android:textColor="@color/dark_gray"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:text=""
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Consultant, Sony Ericsson, Stockholm, Sweden, 2008-2009"
                        android:textColor="@color/dark_gray"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:text="MARITAL"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Married"
                        android:textColor="@color/dark_gray"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:text="KIDS"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="1"
                        android:textColor="@color/dark_gray"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:text="EDUCATION"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Research, Kuvempu University, Shankaraghatta, 2002-2003."
                        android:textColor="@color/dark_gray"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/friend_profile"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="20dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="100dp"
                            android:text="Block Contact"
                            android:textColor="#ef6a6e"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#efefef"></View>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="20dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="100dp"
                            android:text="Report Contact"
                            android:textColor="#ef6a6e"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#efefef"></View>
            </LinearLayout>
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_button_green"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:text="Done"
                android:id="@+id/done"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
